@using ProjectWork.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Work>
@{
    ViewBag.Title = "FilterWorkByCatId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
