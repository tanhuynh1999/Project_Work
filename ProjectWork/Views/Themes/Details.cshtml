                </div>
                <!-- //ad block -->
            </div>
        </div>
        <script>
            function fontChanged(obj) {
                var message = document.getElementById('show_font');
                var value = obj.value;
                if (value === 'Time News Roman') {
                    message.style = "font-family: Time News Roman";
                }
                else if (value === 'Sans-serif') {
                    message.style = "font-family: Sans-serif";
                }
                else if (value === 'Tahoma') {
                    message.style = "font-family: Tahoma";
                }
                else {
                    message.style = "font-family: Arial";
                }
            }
            function sizeChanged15() {
                var message = document.getElementById('show_size');
                message.classList = "col-md-12 item size15";
            }
            function sizeChanged16() {
                var message = document.getElementById('show_size');
                message.classList = "col-md-12 item size16";
            }
            function sizeChanged18() {
                var message = document.getElementById('show_size');
                message.classList = "col-md-12 item size18";
            }
            function lineChanged0() {
                var message = document.getElementById('show_line');
                message.classList = "row linezero";
            }
            function lineChanged5() {
                var message = document.getElementById('show_line');
                message.classList = "row linefive";
            }
            function lineChanged10() {
                var message = document.getElementById('show_line');
                message.classList = "row lineten";
            }
        </script>
    }
    <!-- footer -->
    <footer class="w3l-footer-16">
