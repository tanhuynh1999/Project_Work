@using ProjectWork.Models;
@model List<Category>




<div id="lsCat">
    <div class="" ng-app="myModule">
        <button onclick="window.location.href='/Admin/CategoriesAdmin/create'" class="btn btn-danger">Thêm danh mục</button>
        <div class="row" ng-controller="myControllerCategory">
            <div class="col-md-12">
                <div class="">
                    <div class="">
                        <style>
                            .sortorder:after {
                                content: '\25bc';
                            }

                            .sortorder.reverse:after {
                                content: '\25b2';
                            }
                        </style>
                        <table class="table datatables mt-3 table-striped table-hover" id="dataTable-1">
                            <thead class="bg-dark font-weight-bold">
                                <tr>
                                    <th>
                                        #
                                        <input type="text" placeholder="Mã" class="form-control" ng-model="textSearch.id" />
                                    </th>
                                    <th>
                                        Tên danh mục
                                        <input type="text" placeholder="Tên danh mục" class="form-control" ng-model="textSearch.name" />
                                    </th>
                                    <th style="width: 180px">
                                        Tình trạng
                                        <select class="form-control search" ng-model="textSearch.ac">
                                            <option value="">Tất cả trạng thái</option>
                                            <option value="False">Không hiển thị</option>
                                        </select>
                                    </th>
                                    <th style="width: 180px">
                                        Ngày tạo
                                        <input type="date" placeholder="Tên danh mục" class="form-control" ng-model="" />
                                    </th>
                                    <th style="width: 180px">
                                        Ngày cập nhật
                                        <input type="date" placeholder="Tên danh mục" class="form-control" ng-model="" />
                                    </th>
                                    <th>
                                        <i class="fa fa-cog"></i>
                                        <br />
                                        <input type="checkbox" />
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="todo in filteredTodos | filter: textSearch">
                                    <td style="width: 100px">{{todo.id}}</td>
                                    <td>{{todo.name}}</td>
                                    <td>{{todo.ac}}</td>
                                    <td>12-9-2020</td>
                                    <td>12-9-2020</td>
                                    <td>
                                        <button class="btn btn-sm dropdown-toggle more-horizontal" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="text-muted sr-only">Action</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="/Admin/CategoriesAdmin/details/{{todo.id}}">Xem</a>
                                            <a class="dropdown-item" href="/Admin/CategoriesAdmin/Edit/{{todo.id}}">Sửa</a>
                                            <a class="dropdown-item" href="/Admin/CategoriesAdmin/Delete/{{todo.id}}">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <center>
                            <pagination ng-model="currentPage"
                                        total-items="todos.length"
                                        max-size="maxSize"
                                        boundary-links="true">
                            </pagination>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function onSuccessCat() {
            $('html, body').animate({
                scrollTop: $("#scrolltopCat").offset().top
            }, 500);
        }
    </script>
</div>
<script>
    var todos = angular.module('myModule', ['ui.bootstrap']);

    todos.controller('myControllerCategory', function ($scope) {
        $scope.filteredTodos = []
            , $scope.currentPage = 1
            , $scope.numPerPage = 15
            , $scope.maxSize = 4;

        $scope.makeTodos = function () {
            $scope.todos = [
                @foreach (var item in Model.OrderByDescending(n => n.category_datecreate))
                {
                    @: { id: @item.category_id, ac: "@item.category_active", del: "@item.category_del", name: "@Html.Raw(item.category_name)"  },
                }
            ];

        };
        $scope.makeTodos();

        $scope.$watch('currentPage + numPerPage', function () {
            var begin = (($scope.currentPage - 1) * $scope.numPerPage)
                , end = begin + $scope.numPerPage;

            $scope.filteredTodos = $scope.todos.slice(begin, end);
        });
    });
</script>