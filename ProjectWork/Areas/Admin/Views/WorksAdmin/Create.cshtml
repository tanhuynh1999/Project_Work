                                        @Html.ValidationMessageFor(model => model.work_del, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <b class="control-label col-md-2">Trang thái</b>
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.work_status, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.work_status, "", new { @class = "text-danger" })
