                                    @Html.ValidationMessageFor(model => model.work_amount, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <b class="control-label col-md-2">Tình trạng</b>
                                <div class="col-md-12">
                                    <div class="checkbox">
