@model ProjectWork.Models.Work

@{
    ViewBag.Title = "Thêm việc làm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .ck.ck-editor__editable_inline > :last-child {
        margin-bottom: var(--ck-spacing-large);
        height:200px;
        color: black;
    }
</style>
<div class="col-12">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/WorksAdmin">Quản lý việc làm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm việc làm</li>
        </ol>
    </nav>
    <h2 class="mb-2 page-title">@ViewBag.Title</h2>
    <div class="row my-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <b class="control-label col-md-2">Tên việc làm</b>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.work_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.work_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <b class="control-label col-md-2">Hạn nộp</b>
                                <div class="col-md-12">
                                    <input type="date" class="form-control" name="work_deadline" />
                                    @Html.ValidationMessageFor(model => model.work_deadline, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @*<div class="form-group">
                                    @Html.LabelFor(model => model.work_createdate, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.work_createdate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.work_createdate, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@

                            <div class="form-group">
                                <b class="control-label col-md-2">Mô tả công việc</b>
                                <div class="col-md-12">
                                    <textarea id="work_description" name="work_description"></textarea>
                                    @Html.ValidationMessageFor(model => model.work_description, "", new { @class = "text-danger" })
                                </div>
                                <script>
                                    ClassicEditor
                                        .create(document.querySelector('#work_description'))
                                        .catch(error => {
                                            console.error(error);
                                        });
                                </script>
                            </div>

                            <div class="form-group">
                                <b class="control-label col-md-2">Yêu cầu công việc</b>
                                <div class="col-md-12">
                                    <textarea id="work_request" name="work_request"></textarea>
                                    @Html.ValidationMessageFor(model => model.work_request, "", new { @class = "text-danger" })
                                </div>
                                <script>
                                    ClassicEditor
                                        .create(document.querySelector('#work_request'))
                                        .catch(error => {
                                            console.error(error);
                                        });
                                </script>
                            </div>

                            <div class="form-group">
                                <b class="control-label col-md-2">Quyền lợi, thưởng</b>
                                <div class="col-md-12">
                                    <textarea id="work_benefit" name="work_benefit"></textarea>
                                    @Html.ValidationMessageFor(model => model.work_benefit, "", new { @class = "text-danger" })
                                </div>
                                <script>
                                    ClassicEditor
                                        .create(document.querySelector('#work_benefit'))
                                        .catch(error => {
                                            console.error(error);
                                        });
                                </script>
                            </div>

